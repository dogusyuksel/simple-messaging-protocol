TEST_EXECUTABLE_NAME=test

LDFLAGS += -l${LIBRARY_NAME}
LIB_INCDIR=${ROOT_DIR}/${LIB_PATH}/include
LIB_DIR=${ROOT_DIR}/${LIB_PATH}

TEST_INCDIR=-I ${LIB_INCDIR} -I ${COMMON_INCDIR}
TEST_LIBDIR=-L ${LIB_DIR}

C_SRCS = \
test.c

OBJS += \
./test.o

.PHONY: all clean

all:
	$(CC) -o ./$(TEST_EXECUTABLE_NAME) $(C_SRCS) $(CFLAGS) $(LDFLAGS) $(TEST_LIBDIR) $(TEST_INCDIR) -Wl,-rpath=$(LIB_DIR)

clean:
	$(RM) $(OBJS) ./$(TEST_EXECUTABLE_NAME)
